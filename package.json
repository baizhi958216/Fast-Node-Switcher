{
  "name": "node-version-switcher",
  "displayName": "Node Version Switcher",
  "version": "1.0.1",
  "publisher": "baizhi958216",
  "description": "Quickly switch between Node.js versions using nvm or mise",
  "main": "./extension.js",
  "repository": "https://git.peropero.net/zhi/node-version-switcher",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "node-version-switcher.switchVersion",
        "title": "Node: Switch Version"
      },
      {
        "command": "node-version-switcher.showCurrentVersion",
        "title": "Node: Show Current Version"
      },
      {
        "command": "node-version-switcher.installVersion",
        "title": "Node: Install Version"
      },
      {
        "command": "node-version-switcher.refreshVersions",
        "title": "Node: Refresh Versions"
      }
    ],
    "configuration": {
      "title": "Node Version Switcher",
      "properties": {
        "nodeVersionSwitcher.misePath": {
          "type": "string",
          "default": "",
          "description": "Custom path to mise executable (e.g., C:\\Users\\username\\AppData\\Local\\Microsoft\\WinGet\\Links\\mise.exe). Leave empty for auto-detection."
        },
        "nodeVersionSwitcher.nvmPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to nvm executable (nvm.exe on Windows, nvm.sh on Unix). Leave empty for auto-detection."
        },
        "nodeVersionSwitcher.preferredTool": {
          "type": "string",
          "enum": ["auto", "nvm", "mise"],
          "default": "auto",
          "description": "Preferred version manager. 'auto' will use nvm if available, otherwise mise."
        },
        "nodeVersionSwitcher.autoApplyNvmrc": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect and apply .nvmrc file when opening a workspace."
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mise",
    "nvm",
    "nvm-windows",
    "node",
    "nodejs",
    "version",
    "switcher",
    "nvmrc"
  ],
  "author": "baizhi958216",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.x"
  }
}
